tbody{
  background-color:  #f3f4f9;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
  background-color: #f3f4f9;
} 
.calendar{
  flex-direction:row;
  display:flex;
  width: 90%;
  margin: 0 auto 50rpx;
  background-color: white;
  border-radius: 20rpx;
    
}
.month{
    writing-mode:tb-rl;
    width: 8%;
    height:130rpx;
    margin: 30rpx 3% 6% 6%; 
   
    border: solid 1rpx;
    color: rebeccapurple;
    font-size: 42rpx;
    
    }
.weeks{ 

    flex-direction:row;
    display:flex;
    margin: 20rpx auto;
    }
.week{
    width:10%;
    margin: 10rpx 20rpx;
    font-size:40rpx;
    height:20rpx;
    color:#cccccc;
    text-align:center;
    }

.days{ 
    
    flex-direction:row;
    display:flex;
    margin: 10rpx auto;
    font-size:14px;
    text-align: center;
    line-height: 30px;
    }
.day{
    width:10%;
    margin: 20rpx 20rpx;
    font-size:30rpx;
    text-align:center;
    vertical-align: middle;
    }
.selected{
    border:solid 1rpx;
    color: rebeccapurple;
}
/**iphone6s**/
@media screen and  (max-height:740px){
  .court-info-scroll{
    width: 100%;
    height:867rpx;
  }
}
/**iphone6**/
@media screen and  (max-height:670px){
  .court-info-scroll{
    width: 100%;
    height:750rpx;
  }
}
/**iphone5**/
@media screen and (min-height:481px) and (max-height:580px){
  .court-info-scroll{
    width: 100%;
    height:850rpx;
  }
}
/**iphone4**/
@media screen and  (max-height:480px){
  .court-info-scroll{
    width: 100%;
    height:605rpx;
  }
}



.court-container {
  flex-direction:row;
  display:flex;
}
.court-info,.court-sort {
  display: inline-block;
}
.court-sort {
  width:10%;
  margin: 0 5%;
}
.court-sort-content {
  background-color: #85b2f6;
  border-radius: 15rpx;
  width:70rpx;
  height:70rpx;
  color:white;
  text-align: center;
  line-height: 70rpx;
  font-size:28rpx;
}
.court-sort-line {
  height: 100%;
  width: 1rpx;
  margin:0 auto;
  background: url(/pages/image/sort-line1.png) center;
}
.court-info-line {
    width:100%;
  }





.court-info {
  background-color: white;
  width:75%;
  border-radius: 20rpx;
  font-size: 30rpx;
  margin-bottom:25px;
  
  
}

.court-title{
  height: 70rpx;
  flex-direction:row;
  display:flex;
}
.court-info-name{
  width:55%;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.court-info-time {
  margin-top: 20rpx;
  flex-direction:row;
  display:flex;
}
.court-info-clock {

  width:60rpx;
  margin-bottom: 10rpx;
  background: url(/pages/image/icon-clock.png) center no-repeat;
  display: inline-block;
  
  
}
.court-info-line {
  height:2rpx;
  display: block;
}
.court-info-addr {
  flex-direction:column;
  display:flex;
  margin:20rpx 10rpx;
}
.court-info-detail{
  padding: 10rpx;
}
